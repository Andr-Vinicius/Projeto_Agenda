<%- include('includes/head'); %>
<%- include('includes/nav'); %>

<div class="container">
  <div class="row">
    <div class="col lg-2"></div>

    <div class=".col-lg-8 my-3">
      <h1 class="text-center">Login</h1>
      <p class="text-center lead">Faça seu login, ou cria a sua conta abaixo:</p>

      <%- include('includes/messages'); %>

    <div class="row">

        <div class="col-lg">
            <h4>Cadastre-se</h4>
            <p>Se você ainda não possui conta, faça o seu cadastro logo abaixo:</p>
            <form action="/login/register" method="post">
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="form-group">
                  <label>Email</label>
                  <input type="email" class="form-control" name="email" aria-describedby="emailHelp">
                </div>
                <div class="form-group">
                  <label>Senha</label>
                  <input type="password" class="form-control" name="senha">
                  <div id="reqSenha" class="form-text">Sua senha deve conter...</div>
                </div>
                <button type="submit" class="btn btn-primary">Cadastrar</button>
              </form>
        </div>

        <div class="col-lg">
            <h4>Entre na sua conta</h4>
            <p>Faça seu login logo abaixo:</p>
            <form action="/login/login" method="post">
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="form-group">
                  <label>Email</label>
                  <input type="email" class="form-control" name="email" aria-describedby="emailHelp">
                </div>
                <div class="form-group">
                  <label>Senha</label>
                  <input type="password" class="form-control" name="senha">
                  <div id="reqSenha" class="form-text">Sua senha deve conter...</div>
                </div>
                <button type="submit" class="btn btn-primary">Entrar</button>
              </form>
        </div>
      </div>
      
    </div>

    <div class="col lg-2"></div>
  </div>
</div>

<%- include('includes/footer'); %>